{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Extension Tests",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/src",
          "--extensionTestsPath=${workspaceFolder}/build/src/test/suite/index"
        ],
        "outFiles": ["${workspaceFolder}/build/src/test/**/**/*.js"]
      }
    ]
  }